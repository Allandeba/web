@model IEnumerable<ItemModel>

@{
    ViewData["Title"] = "Item Page";
}

<section class="py-5 text-center">
    <div class="container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Items</h1>
                <p class="lead text-muted">For more information, click on the proposals below.</p>
            </div>
        </div>

        <div class="col-lg-6 col-md-8 mx-auto mt-4 mt-md-0 d-flex justify-content-end">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Add</button>
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <div class="list-group-item list-group-item-action d-flex gap-3 py-3">
                        <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.ItemId" class="close position-absolute top-0 start-0 translate-middle badge rounded-circle bg-danger p-2 opacity-75 text-decoration-none" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </a>

                        <a asp-controller="Item" asp-action="Update" asp-route-id="@item.ItemId" class="d-flex align-items-center w-100 text-decoration-none text-dark">
                            <img src="https://cdn-icons-png.flaticon.com/512/64/64572.png" alt="user icon" width="32" height="32" class="rounded-circle flex-shrink-0">

                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">@item.ItemName</h6>
                                <p class="mb-0 opacity-75">@item.Description</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>