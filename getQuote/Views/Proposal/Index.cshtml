@model IEnumerable<ProposalModel>

@{
    ViewData["Title"] = "Proposal Page";
}

<section class="py-5 text-center">
    <div class="container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Proposal</h1>
                <p class="lead text-muted">For more information, click on the proposals below.</p>
            </div>
        </div>

        <div class="col-lg-6 col-md-8 mx-auto mt-4 mt-md-0 d-flex justify-content-end">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Add</button>
        </div>
    </div>
</section>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <ul class="list-group">
                @foreach (var proposal in Model)
                {
                    <li class="list-group-item list-group-item-action d-flex gap-3 py-3">
                        <a asp-controller="Proposal" asp-action="Delete" asp-route-id="@proposal.ProposalId" class="close position-absolute top-0 start-0 translate-middle badge rounded-circle bg-danger p-2 opacity-75 text-decoration-none" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </a>

                        <a asp-controller="Proposal" asp-action="Update" asp-route-id="@proposal.ProposalId" class="d-flex align-items-center w-100 text-decoration-none text-dark">
                            <img src="https://cdn-icons-png.flaticon.com/512/2349/2349122.png" alt="user icon" width="32" height="32" class="rounded-circle flex-shrink-0">

                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0">@proposal.ProposalId - @proposal.Person.PersonName</h6>
                                <p class="mb-0 opacity-75">Modified @proposal.ModificationDate.ToString("dd/MM/yyyy")</p>
                            </div>
                        </a>

                        <div class="d-flex flex-column flex-sm-row">
                            <div class="mb-3 mb-sm-0 me-sm-3">
                                <a asp-controller="Proposal" asp-action="SendWhatsApp" asp-route-id="@proposal.GUID" class="text-decoration-none" target="_blank">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" class="bi bi-whatsapp" viewBox="0 0 16 16">
                                        <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z" />
                                    </svg>
                                </a>
                            </div>

                            <div class="mb-3 mb-sm-0 me-sm-3">
                                <a asp-controller="Proposal" asp-action="ExportToPDF" asp-route-id="@proposal.GUID" class="text-decoration-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                        <path d="M128 0C92.7 0 64 28.7 64 64v96h64V64H354.7L384 93.3V160h64V93.3c0-17-6.7-33.3-18.7-45.3L400 18.7C388 6.7 371.7 0 354.7 0H128zM384 352v32 64H128V384 368 352H384zm64 32h32c17.7 0 32-14.3 32-32V256c0-35.3-28.7-64-64-64H64c-35.3 0-64 28.7-64 64v96c0 17.7 14.3 32 32 32H64v64c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V384zM432 248a24 24 0 1 1 0 48 24 24 0 1 1 0-48z" />
                                    </svg>
                                </a>
                            </div>

                            @if (proposal.ProposalHistory != null && proposal.ProposalHistory.Count > 0)
                            {
                                <div class="dropdown mb-3 mb-sm-0 me-sm-3">
                                    <a href="#" class="text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="https://cdn-icons-png.flaticon.com/512/2822/2822682.png" alt="history icon" width="16" height="16" class="rounded-circle flex-shrink-0">
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        @foreach (var proposalHistory in proposal.ProposalHistory.OrderByDescending(x => x.ProposalHistoryId))
                                        {
                                            <li>
                                                <a asp-controller="ProposalHistory" asp-action="ExportToPDF" asp-route-id="@proposalHistory.ProposalHistoryId" class="dropdown-item d-flex align-items-center text-decoration-none text-dark">
                                                    <span class="text-muted">@($"{proposalHistory.ProposalHistoryId} - Modified {proposalHistory.ModificationDate.ToString("dd/MM/yyyy")}")</span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>

                    </li>
                }
            </ul>
        </div>
    </div>
</div>