@model ProposalModel

@{
    ViewData["Title"] = "Update - " + Model.ProposalId;
    string itemsJson = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ItemsFull);
}

@section Scripts
{
    <script src="@Url.Content("~/js/proposalUtils.js")"></script>
}

<script>
    var items = @Html.Raw(itemsJson);

    document.addEventListener('DOMContentLoaded', () => {
        let personList = document.getElementById('ProposalPersonId');
        personList.value = @ViewBag.ProposalPerson.PersonId;
    });
</script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h4 class="mb-3">Proposal detail</h4>
            @using (Html.BeginForm("Update", "Proposal", FormMethod.Post, new { @class = "needs-validation" }))
            {
                @Html.HiddenFor(m => m.ProposalId)
                @Html.HiddenFor(m => m.ModificationDate)

                <div class="mb-3 text-start">
                    <label asp-for="ProposalPersonId" class="form-label"></label>
                    <select asp-for="ProposalPersonId" class="form-select" asp-items="@ViewBag.People"></select>
                    <span asp-validation-for="ProposalPersonId" class="text-danger"></span>
                </div>

                <div class="mb-3 text-start">
                    <label for="ItemList" class="form-label">Items</label>
                    <select id="ItemList" class="form-select" asp-items="@ViewBag.Items" onchange="javascript:selectionChange(this)">
                        <option value="@((int)SelectDefault.None)">@(SelectDefault.None.ToString())</option>
                    </select>
                </div>

                <hr class="my-4">

                <div class="table-responsive mb-4">
                    <table id="proposalContentTable" class="table table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-center">Proposal Content ID</th>
                                <th class="text-center">Item ID</th>
                                <th class="text-center">Item Name</th>
                                <th class="text-center">Value</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="table-rows">
                            @{
                                decimal totalValue = 0;
                            }

                            @foreach (var proposalContent in ViewBag.ProposalContent)
                            {
                                <tr id="proposalContentRow_@proposalContent.ProposalContentId">
                                    <td class="text-center">
                                        <input type="hidden" asp-for="ItemIdList" value="@proposalContent.Item.ItemId" />
                                        <span>@proposalContent.ProposalContentId</span>
                                    </td>
                                    <td class="text-center">@proposalContent.Item.ItemId</td>
                                    <td class="text-center">@proposalContent.Item.ItemName</td>
                                    <td id="item-value" class="text-center">R$ @proposalContent.Item.Value</td>
                                    <td class="text-center">
                                        <span class="delete-icon" onclick="deleteItem(@proposalContent.ProposalContentId, @proposalContent.Item.ItemId)">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                                                <style>
                                                    svg {
                                                        fill: #e60a0a
                                                    }
                                                </style>
                                                <path d="M432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16zM53.2 467a48 48 0 0 0 47.9 45h245.8a48 48 0 0 0 47.9-45L416 128H32z" />
                                            </svg>
                                        </span>
                                    </td>
                                </tr>

                                totalValue += proposalContent.Item.Value;
                            }

                            <tr>
                                <td colspan="3" class="text-end fw-bold">Total:</td>
                                <td id="total-value-cell" class="text-center fw-bold">R$ @totalValue.ToString("0.00")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <hr class="my-4">

                <div class="text-end mb-4">
                    <button class="btn btn-primary btn-lg" type="submit">Save</button>
                    <a class="btn btn-secondary btn-lg" asp-action="index">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
