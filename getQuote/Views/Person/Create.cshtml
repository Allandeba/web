@model PersonModel

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-7 col-lg-8">
    <form method="post" asp-action="Create" asp-controller="Person" class="needs-validation">
        <div class="row g-3">
            <div class="col-sm-6">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="" required>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-sm-6">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="" required>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Contact.Email" class="form-label"></label>
                <input asp-for="Contact.Email" class="form-control" placeholder="you@example.com" requried>
                <span asp-validation-for="Contact.Email" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Contact.Phone" class="form-label"></label>
                <input asp-for="Contact.Phone" class="form-control" placeholder="+55 (49) 9 xxxx-xxxx" required>
                <span asp-validation-for="Contact.Phone" class="text-danger"></span>
            </div>

            <div class="col-md-5">
                <label asp-for="Document.DocumentType"></label>
                <select asp-for="Document.DocumentType" asp-items="@Html.GetEnumSelectList<DocumentTypes>()" class="form-select" required>
                    <option>--Choose--</option>
                </select>
                <span asp-validation-for="Document.DocumentType" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Document.Document" class="form-label"></label>
                <input asp-for="Document.Document" class="form-control" placeholder="" required>
                <span asp-validation-for="Document.Document" class="text-danger"></span>
            </div>
        </div>

        <hr class="my-4">

        <div class="form-group">
            <input class="w-100 btn btn-primary btn-lg" type="submit" value="Save" />
            <a class="w-100 btn btn-secondary btn-lg" asp-action="index">Cancel</a>
        </div>

    </form>
</div>

